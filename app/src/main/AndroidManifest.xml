<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.lsinf1225.g16.mini_poll">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/survey_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:configChanges="orientation|keyboardHidden">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ProfileEditActivity" />
        <activity android:name=".ProfileCreateActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".MenuMainActivity" />
        <activity android:name=".MenuSurveyCreationActivity" />
        <activity android:name=".CreationAgreementActivity" />
        <activity android:name=".CreationQuestionActivity" />
        <activity android:name=".CreationChoiceActivity" />
        <activity android:name=".FriendsActivity" />
        <activity android:name=".FriendsAddActivity" />
        <activity android:name=".FriendsListActivity" />
        <activity android:name=".MenuAgreementActivity" />
        <activity android:name=".MenuQuestionActivity" />
        <activity android:name=".MenuChoiceActivity" />
        <activity android:name=".ReplyAgreementActivity" />
        <activity android:name=".ReplyQuestionActivity" />
        <activity android:name=".ReplyChoiceActivity" />
    </application>

</manifest>