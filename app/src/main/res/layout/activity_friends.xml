<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/app_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="20"
    tools:context="be.lsinf1225.g16.mini_poll.activity.FriendsActivity">

    <!-- Login progress -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="20"
        android:background="#a5d8ff"
        android:clickable="true"
        android:layout_weight="10"
        android:onClick="friendslist"
        android:focusable="true">

        <ImageButton
            android:id="@+id/seefriendslistbtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:background="#a5d8ff"
            android:clickable="false"
            android:contentDescription="@string/consulter_la_liste_amis"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/friends_list_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="@string/consulter_la_liste_amis"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:orientation="vertical"
        android:weightSum="20"
        android:background="#1971c2"
        android:layout_weight="10"
        android:onClick="friendsadd"
        android:focusable="true">


        <ImageButton
            android:id="@+id/addfriendsbtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="17"
            android:background="#1971c2"
            android:clickable="false"
            android:contentDescription="@string/ajouter_un_amis"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tint="#ffffff"
            app:srcCompat="@drawable/friends_add_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#1971c2"
            android:clickable="false"
            android:text="@string/ajouter_un_amis"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff"></TextView>

    </LinearLayout>
</LinearLayout>
