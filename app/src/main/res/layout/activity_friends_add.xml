<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/app_background"
    android:weightSum="80"
    tools:context="be.lsinf1225.g16.mini_poll.activity.FriendsAddActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="0dp">

        <ImageButton
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@android:color/holo_green_light"
            android:scaleType="fitStart"
            android:visibility="visible"
            app:srcCompat="@drawable/ok"
            android:contentDescription="@string/ok" />

        <TextView
            android:id="@+id/ajouter_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ok_btn"

            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/ajouter_comme_amis"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:typeface="normal" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/profil_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="60"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/default_profile_picture"
        android:contentDescription="@string/profil" />

    <TextView
        android:id="@+id/name_inf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/textview_border"
        android:text="@string/nom_name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/surname_inf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/textview_border"
        android:text="@string/prenom_prenom"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


</LinearLayout>
