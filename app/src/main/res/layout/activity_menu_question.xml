<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimalbackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="100"
    tools:context="be.lsinf1225.g16.mini_poll.activity.MenuQuestionActivity">


    <TextView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="#0030b3"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/questionnaire"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="90">


        <LinearLayout
            android:id="@+id/menu_question_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="80">

            <TextView
                android:id="@+id/menu_question_mes_questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:layout_margin="10dp"
                android:background="#0044ff"
                android:text="@string/mes_questionnaires"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffffff"
                android:textSize="24sp"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/menu_question_ouvertes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:background="#0044ff"
                android:text="@string/questionnaires_ouverts"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffffff"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/menu_question_questions_clotures"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:layout_margin="10dp"
                android:background="#0044ff"
                android:text="@string/questionnaire_clotures"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffffff"
                android:textSize="24sp"
                android:textStyle="bold" />





        </LinearLayout>
    </ScrollView>
</LinearLayout>
