<?xml version="1.0" encoding="utf-8"?>




    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activity.ProfileEditActivity"
        android:background="@drawable/minimalbackground"
        android:orientation="vertical"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:padding="20dp">

            <ImageView
                android:id="@+id/mpr_imgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Main Image"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_profile_picture" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_border"
                android:contentDescription="Image Border"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/mpr_edit"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="false"
                android:background="@drawable/editor_state"
                android:clickable="true"
                android:contentDescription="image"
                android:cropToPadding="false"
                android:onClick="editpp"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_pen"
                android:tint="#ffffffff" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="3"
            android:orientation="vertical">


            <EditText
                android:id="@+id/mpr_nom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical"
                android:hint="Nom"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mpr_prenom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical"
                android:hint="PrÃ©nom"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/mpr_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical"
                android:hint="Adresse Mail"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:textSize="18sp" />


            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/mpr_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical"
                android:hint="Identifiant"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mpr_id_mdp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp" />

            <Button
                android:id="@+id/mpr_btn_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="editid"
                android:text="Modifier l'identifiant" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/mpr_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint="Ancien Mot de passe"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp" />

            <EditText
                android:id="@+id/mpr_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp" />

            <EditText
                android:id="@+id/mpr_new_pwd_confirm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:hint="@string/confirmer_le_mot_de_passe"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp" />

            <Button
                android:id="@+id/mpr_btn_pwd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="editmdp"
                android:text="@string/modifier_le_mot_de_passe" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <Button
                android:id="@+id/mpr_save"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="mainmenu"
                android:text="@string/enregistrer_les_modifications" />


        </LinearLayout>

    </LinearLayout>


    </ScrollView>

