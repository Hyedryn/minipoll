<?xml version="1.0" encoding="utf-8"?>




    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activity.ProfileEditActivity"
        android:background="@drawable/app_background"
        android:orientation="vertical"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mpr_imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Main Image"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profile_picture" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_border"
            android:contentDescription="Image Border"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/mpr_edit"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:background="@drawable/editor_state"
            android:onClick="editpp"
            android:clickable="true"
            android:contentDescription="image"
            android:cropToPadding="false"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/edit_pen" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1.25"
        android:orientation="vertical"
        >


        <EditText
            android:id="@+id/mpr_nom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:hint="Nom"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/mpr_prenom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:hint="PrÃ©nom"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:textSize="18sp"/>


        <EditText
            android:id="@+id/mpr_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:hint="Adresse Mail"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:textSize="18sp" />


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <EditText
            android:id="@+id/mpr_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:hint="Identifiant"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/mpr_id_mdp"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:hint="Mot de passe"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/mpr_btn_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="editid"
            android:text="Modifier l'identifiant" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <EditText
            android:id="@+id/mpr_old_pwd"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:hint="Ancien Mot de passe"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/mpr_new_pwd"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:hint="Mot de passe"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/mpr_new_pwd_confirm"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:hint="@string/confirmer_le_mot_de_passe"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/mpr_btn_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="editmdp"
            android:text="@string/modifier_le_mot_de_passe" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <Button
            android:id="@+id/mpr_save"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="mainmenu"
            android:text="@string/enregistrer_les_modifications" />


    </LinearLayout>

        </LinearLayout>


    </ScrollView>

