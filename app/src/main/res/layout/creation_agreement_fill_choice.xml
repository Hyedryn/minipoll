<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimalbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Remplissez les informations relatives au sondage"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:id="@+id/creation_agreement_fill_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#4d6dbe"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/textview_border"
                            android:gravity="center_vertical|center"
                            android:hint="Question"
                            android:inputType="text"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/dot_dark_screen3"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_r1_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:hint="Réponse "
                            android:visibility="gone"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/creation_agreement_fill_r1_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit_pen" />


                        <ImageButton
                            android:id="@+id/creation_agreement_fill_r1_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:visibility="gone"
                            android:background="#43b5b5b5"
                            android:src="@android:drawable/ic_delete"
                            android:tint="#ffffffff" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/dot_dark_screen3"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_r2_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:hint="Réponse "
                            android:visibility="gone"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/creation_agreement_fill_r2_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit_pen" />




                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/dot_dark_screen3"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_r3_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:hint="Réponse "
                            android:visibility="gone"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/creation_agreement_fill_r3_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit_pen" />




                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/dot_dark_screen3"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_r4_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:hint="Réponse "
                            android:visibility="gone"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/creation_agreement_fill_r4_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit_pen" />





                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/dot_dark_screen3"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_r5_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:hint="Réponse "
                            android:visibility="gone"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/creation_agreement_fill_r5_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit_pen" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/dot_dark_screen3"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creation_agreement_fill_r6_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:hint="Réponse "
                            android:visibility="gone"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:paddingBottom="8dp"
                            android:paddingStart="6dp"
                            android:paddingTop="6dp"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/creation_agreement_fill_r6_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit_pen" />




                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/creation_agreement_fill_add_rep_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#3d5aa3"
                    android:padding="3dp"
                    android:clickable="true"
                    android:text="Ajouter Réponse (Image)"
                    android:textColor="#ffffffff" />


                <Button
                    android:id="@+id/creation_agreement_fill_add_rep_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#3d5aa3"
                    android:padding="3dp"
                    android:clickable="true"
                    android:text="Ajouter Réponse (Texte)"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/creation_agreement_fill_remove_rep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#3d5aa3"
                    android:padding="3dp"
                    android:clickable="true"
                    android:text="Retirer la dernière réponse"
                    android:textColor="#ffffffff" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>