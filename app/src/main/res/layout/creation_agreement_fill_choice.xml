            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter Question" />

    </LinearLayout>

</RelativeLayout>