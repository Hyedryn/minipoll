<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimalbackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:paddingBottom="20sp"
            android:paddingTop="20sp"
            android:text="Choisissez le format des choix"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:id="@+id/creation_agreement_format_group"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:visibility="visible">



                <RadioButton
                    android:id="@+id/creation_agreement_format_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#5effffff"
                    android:padding="15sp"
                    android:text="Une Question"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            <RadioButton
                android:id="@+id/creation_agreement_format_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#5effffff"
                android:padding="15sp"
                android:text="Deux Questions"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/creation_agreement_format_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#5effffff"
                android:padding="15sp"
                android:text="Trois Questions"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/creation_agreement_format_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#5effffff"
                android:padding="15sp"
                android:text="Quatre Questions"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/creation_agreement_format_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#5effffff"
                android:padding="15sp"
                android:text="Cinq Questions"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RadioGroup>

    </LinearLayout>
</ScrollView>

