<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimalbackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:paddingBottom="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="30dp"
            android:text="Choisissez le format des choix"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:id="@+id/creation_agreement_format_group"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="visible">



                <RadioButton
                    android:id="@+id/creation_agreement_format_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_margin="5dp"
                    android:background="#5effffff"
                    android:padding="40dp"
                    android:text="Texte"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="36sp"
                    android:textStyle="bold" />


            <RadioButton
                android:id="@+id/creation_agreement_format_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_margin="5dp"
                android:background="#5effffff"
                android:padding="40dp"
                android:text="Image"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="36sp"
                android:textStyle="bold" />


        </RadioGroup>

    </LinearLayout>


</RelativeLayout>